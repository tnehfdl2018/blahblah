<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="itc.hoseo.spring.blah.comment.CommentMapper">

	<!-- select part -->
	
	<select id="getComments" resultType="Comment">
		select * from comment
	</select>
	
	<select id="findComments" parameterType="Comment" resultType="Comment">
		select * from comment		
		<where>
			 <if test="teamNameKr != null">
				team_name_kr = #{teamNameKr}
			</if>
		</where>
	</select>
	
	
	<!-- insert part -->
	
	<insert id="addComment" parameterType="Comment">
		insert into comment(team_name_kr, subject, writer, content, date) values 
		(#{teamNameKr}, #{subject}, #{writer}, #{content}, #{wrtrDttm})
	</insert>
	
	
	
	<!-- update part -->
	 
	<update id="updateComment">
		update comment
		set team_name_kr = #{teamNameKr}
		where team_name_kr = #{teamNameKr}	
	</update>
	
	
	<!-- delete part -->

	<delete id="deleteComment">
		delete from comment
		where team_name_kr = #{teamNameKr}		
	</delete>
	
</mapper>